@{
  Layout = null;
  string content = Url.Content("~/").TrimEnd('/');
  string value = Business.Utils.GetFronEndValue(Domain.Entities.Basic.ForntEndEditableType.BACKGROUND_COLOR);
}

<div id="editable-box" class="alerta">
  <div class="alerta-titulo">
    <h1>@ViewBag.GENERAL</h1>
    <div class="alerta-cerrar">
      <img src="~/resources/images/mimedellin/cerrar.png" border="0" alt="icon" />
    </div>
  </div>
  <div class="clear"></div>

  <div class="editable-content">
    <div class="registro-item">
      <div class="registro-txt">@ViewBag.TXTBACKCOLOR<span>:</span></div>
      <div class="editable-input">
        <input type="text" maxlength="30" class="editable-value registro-input-editable" data-id="@((int)Domain.Entities.Basic.ForntEndEditableType.BACKGROUND_COLOR)" data-type="text" value="@value"/>
      </div>
    </div>
  </div>

  <div class="editable-content">
    <div class="registro-item">
      <div class="registro-txt">@ViewBag.TXTPARTBUTT<span>:</span></div>
      <div class="editable-input">
        <input type="text" maxlength="10" class="editable-value registro-input-editable" data-id="@((int)Domain.Entities.Basic.ForntEndEditableType.BUTTON_CREATE_IDEA)" data-type="text" value="@Business.Utils.GetFronEndValue(Domain.Entities.Basic.ForntEndEditableType.BUTTON_CREATE_IDEA)"/>
      </div>
    </div>
  </div>

  <div class="editable-content">
    <div class="registro-item">
      <div class="registro-txt">@ViewBag.TXTBTNJOIN <span>:</span></div>
      <div class="editable-input">
        <input type="text" maxlength="10" class="editable-value registro-input-editable" data-id="@((int)Domain.Entities.Basic.ForntEndEditableType.BUTTON_FOLLOW_PULSE)" data-type="text" value="@Business.Utils.GetFronEndValue(Domain.Entities.Basic.ForntEndEditableType.BUTTON_FOLLOW_PULSE)"/>
      </div>
    </div>
  </div>

  <div class="clear"></div>
  <div class="centrado">
    <div class="alerta-aceptar">
      <a>
        <h3>@ViewBag.SAVE</h3>
        <span></span>
      </a>
    </div>
  </div>
  <div class="clear"></div>
</div>




