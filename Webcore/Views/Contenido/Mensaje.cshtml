@model Webcore.Models.FEMessage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CMS</title>
    <style type="text/css">
        body { font-family:Segoe UI Light; margin:0px; }
        .header { width:100%; height:150px; background-color:#F6F6F6; border-bottom-color: #e5e5e5; border-bottom-width: 2px; border-bottom-style: solid; }
        .footer { position:fixed; bottom:0px; width:100%; height:150px; background-color:#F6F6F6; border-top-color: #e5e5e5; border-top-width: 2px; border-top-style: solid; }
        .sad { font-size:60px; color:#28A7E6; }
        .bod { text-align:center; }
        .message { padding-top:15px; font-size:25px; color:#ff8000; }
    </style>
</head>
<body>
    <div class="header">
    </div>
    <div class="bod">
        <div>
            <span class="sad"><b>:(</b> @ViewBag.TXTOPSSORRY</span>
        </div>
        <div class="message">
            @Model.Title
            <br />
            @Model.Message
        </div>
    </div>
    <div class="footer">
    </div>
</body>
</html>
