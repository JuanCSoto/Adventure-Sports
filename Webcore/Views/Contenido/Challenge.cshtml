              <h1>@Resources.Extend.Messages.WEALREADY</h1>
            </div>
          }
          @if (!ended)
          {
            <div class="media-indicador restantes3@(ended ? " gris" : "")">
              <span>@endDay</span>
              <h1>@Html.Raw(Resources.Extend.Messages.DAYREMAINING)</h1>
            </div>
