        <div class="clear"></div>
        <div class="izquierda">
          <div class="content-tooltip">
            @switch (Entity.ObjChallenge.Type)
            {
              case Domain.Entities.Challenge.TypeChallenge.Participacion_Ciudadana:
              <div class="media-indicador participacion3@(ended ? " participacion3gris" : "")">
                <span></span>
                <div class="clear"></div>
