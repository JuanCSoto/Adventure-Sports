@{
    Layout = null;
    string siteUrlRoot = (("http://" + Request.Url.Host + Request.ApplicationPath).TrimEnd('/'));
    /*string mailContact = ConfigurationManager.AppSettings["MailContact"];*/
    string mailContact = "info@citiesfor.life";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>MAILING DE BIENVENIDA</title>
    </head>
    <body style="font-family: helvetica, arial, sans-serif;">
        <table style="background:url(@(siteUrlRoot)/resources/images/current/arriba.jpg); width:800px; height:119px;">
            <tr>
                <td><a style="width:277px; height:109px; float:left; cursor:pointer;"></a></td>
                <td style="width:523px; color:#fff;">
                    <div style="float:right; color:#fff;">
                        <h4 style="float:left; width:130px; text-align:center; font-size:24px; margin:10px 35px 30px 0;">@ViewBag.CountUsers.ToString("##,##0")</h4>
                        <h3 style="float:left; width:130px; text-align:center; font-size:24px; margin:10px 8px 30px 0;">@ViewBag.CountIdeas.ToString("##,##0")</h3>
                    </div>
                    <div style="clear:both"></div>
                    <div style="float:right; margin:0 3px 0 0;">
                        <a href="https://www.facebook.com/Citiesflife" target="_blank" style="float:left; width:30px; height:30px; margin:0 10px 0 0; cursor:pointer;"></a>
                        <a href="https://twitter.com/citiesflife" target="_blank" style="float:left; width:30px; height:30px; margin:0 10px 0 0; cursor:pointer;"></a>
                        <a href="https://instagram.com/Citiesflife" target="_blank" style="float:left; width:30px; height:30px; margin:0 10px 0 0; cursor:pointer;"></a>
                    </div>
                </td>
            </tr>
        </table>
        <table style="width:800px;">
            <tr>
                <td style="font-size:20px; color:#01928D; font-weight:bold;">
						<p style="margin:10px;">@ViewBag.UserName</p>
				  </td>
            </tr>
            <tr>
                <td style="font-size:16px; color:#515151;">
                    <p style="margin:10px; width:780px;">
                        @Html.Raw(Resources.Extend.Messages.WELCOMCI)
                    </p>
                </td>
            </tr>
            <tr>
                <td style="font-size:16px; color:#515151;">
                    <p style="margin:10px; width:780px;">
                        @Html.Raw(Resources.Extend.Messages.INNOVATION)
                    </p>
                </td>
            </tr>
            <tr>
                <td style="font-size:16px; color:#515151;">
                    <p style="margin:10px; width:780px;">
                      @Html.Raw(Resources.Extend.Messages.SHAREVOTE)
                    </p>
                </td>
            </tr>
            <tr>
                <td style="font-size:18px; color:#515151; font-weight:bold;">
                    <p style="margin:10px; text-align:center;">
                        @Html.Raw(Resources.Extend.Messages.BYJOINN)<br />
                        <a href="http://www.citiesfor.life" target="_blank">www.citiesfor.life</a>
                    </p>
                </td>
            </tr>
            <tr>
                <td style="background-color:#f2f2f2; width:800px; height:40px;margin:10px; text-align:center;">
                    <h3 style="margin:10px; text-align:center;color:gray; cursor:pointer;">
                        @Html.Raw(Resources.Extend.Messages.YOUHAVEQUESTION)
					  </h3>
                    <h3 style="margin:10px; text-align:center;">
                        <a style="cursor:pointer;" href="mailto:@mailContact">@mailContact</a>
					  </h3>
                </td>
            </tr>
        </table>
    </body>
    </html>
