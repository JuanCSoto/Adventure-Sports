@model List<Domain.Entities.FrontEnd.IdeasPaging>
@{
    string date = string.Empty;
    bool multiple = false;
    if (Model.Count > 0 && Model[0].QuestionType != null && Model[0].QuestionType == Domain.Entities.Question.TypeQuestion.Seleccion_Multiple)
    {
      multiple = true;
    }
}
@if(Model.Count > 0)
{
@*<input id="filter-content-id" type="hidden" value="@Model[0].ContentId" />*@
<div class="seccion-ideas">
    <span style="border-right:1px solid #ddd; text-transform:uppercase" id="ideas">@(multiple ? "COMENTARIOS" : Business.Utils.GetFronEndValue(Domain.Entities.Basic.ForntEndEditableType.IDEAS_PLURAL))</span>
    <span id="top10">TOP 10</span>
</div>
<div class="clear"></div>
<div class="@(multiple ? "ideas-block-multiple" : "ideas-block")" id="ideasBlock">    
    @if(!multiple)
    {
    <div class="clear"></div>
    <div class="filtros">
        <a data-id="1">@Resources.Global.Messages.RANDOM</a>
        <a id="default-filter" data-id="2">@Resources.Global.Messages.RECENT</a>
        <a data-id="3">@Resources.Global.Messages.POPULAR</a>
        <a data-id="4">@Resources.Global.Messages.RECOMMENDED</a>
        <span class="stretch"></span>
    </div>
    }
    <div class="clear"></div>
    @Html.Partial("_SearchSmall", Model[0].ContentId)
    
    @*<div id="ideas-list-container">
        @Html.Partial("_CardIdeasList", Model)
    </div>*@
</div>
}
else
{
<div id="no-ideas-sorry"></div>
}